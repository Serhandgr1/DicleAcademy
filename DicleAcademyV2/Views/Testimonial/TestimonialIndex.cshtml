@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer
@model List<StudentsSayDto>
<div class="container-fluid bg-primary py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">@Localizer["Testimonial"] </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" asp-action="Index" asp-controller="Home">@Localizer["Home"]</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">@Localizer["Testimonial"] </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>



<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">@Localizer["Testimonial"] </h6>
            <h1 class="mb-5">@Localizer["OurStudentsSay"]</h1>
        </div>
        <div class="owl-carousel testimonial-carousel position-relative">
            @foreach (var item in Model)
            {
                <div class="testimonial-item text-center" id=@item.StudentsSayId>
                    <img class="border rounded-circle p-2 mx-auto mb-3" src="~/Images/StudentsSayImages/@item.StudentsSayImage" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">@item.StudentName</h5>
                    <p>@item.StudentSurname</p>
                    <div class="testimonial-text bg-light text-center p-4">
                        <h5>@item.StudentsSayTitle</h5>
                        <p class="mb-0">@item.StudentsSayDescription</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
